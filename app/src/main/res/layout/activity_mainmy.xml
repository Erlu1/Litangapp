<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainmyActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:id="@+id/L_one"
        android:background="@drawable/shape_10dp_top_corners">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/heart"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/heart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T1"
            android:text="昵称："
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="erlu"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/T2"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/setting"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="150dp"
            android:id="@+id/set"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/L_one"
        android:layout_marginTop="20dp"
        android:id="@+id/L_five"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/star"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="商品收藏"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/jilv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="浏览记录"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="77dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/L_five"
        android:id="@+id/L_two"
        android:background="@drawable/shape_30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@drawable/daipay"
            android:id="@+id/table_1"/>
        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@drawable/pay"
            android:id="@+id/table_2"/>
        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@drawable/daishou"
            android:id="@+id/table_3"/>
        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@drawable/yishou"
            android:id="@+id/table_4"/>
        <ImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:background="@drawable/dingdan"
            android:id="@+id/table_5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/L_two"

        android:id="@+id/L_three"
        android:orientation="horizontal">
        <TextView
            android:layout_width="77dp"
            android:layout_height="20dp"
            android:text="待付款"
            android:gravity="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="77dp"
            android:layout_height="20dp"
            android:text="已付款"
            android:gravity="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="77dp"
            android:layout_height="20dp"
            android:text="待收货"
            android:gravity="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="77dp"
            android:layout_height="20dp"
            android:text="已收货"
            android:gravity="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="77dp"
            android:layout_height="20dp"
            android:text="我的订单"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/L_three"
        android:layout_marginTop="20dp"
        android:id="@+id/L_four"
        android:orientation="horizontal">
        <ListView
            android:layout_width="390dp"
            android:layout_height="100dp"
            android:layout_below="@id/L_four"
            android:id="@+id/List_two"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />
    </LinearLayout>

    <ListView
        android:layout_width="390dp"
        android:layout_height="240dp"
        android:layout_below="@id/L_four"
        android:id="@+id/List_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_below="@id/List_one"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/index" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inf"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/car"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my"
            android:layout_marginLeft="41dp"/>
    </LinearLayout>


</RelativeLayout>


